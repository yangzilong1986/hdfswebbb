<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>WebHandler.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>WebHandler.Register</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>uploadFile</servlet-name>
        <servlet-class>WebHandler.UploadFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadFile</servlet-name>
        <url-pattern>/uploadFile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>downloadFile</servlet-name>
        <servlet-class>WebHandler.DownloadFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>downloadFile</servlet-name>
        <url-pattern>/downloadFile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>deleteFile</servlet-name>
        <servlet-class>WebHandler.DeleteFile</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>deleteFile</servlet-name>
        <url-pattern>/deleteFile</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>refresh</servlet-name>
        <servlet-class>WebHandler.Refresh</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>refresh</servlet-name>
        <url-pattern>/refreshOptList</url-pattern>
    </servlet-mapping>
</web-app>